<div "page-header">
  <h1><%= @user.full_name %></h1>
</div>

<% if @statuses %>
  <!-- Sort by most recent -->
  <% @statuses.reverse.each do |status| %>
    <div class="status">
      <div class="row">
        <div class="col-md-1">
          <%= image_tag status.user.gravatar_url %>
        </div>
        <div class="col-md-7">
          <%= status.content %>
          <div class="meta">
            <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
            <span class="admin">
              | <%= link_to "Edit", edit_status_path(status) %> | <%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete this status?"} %>
            </span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
